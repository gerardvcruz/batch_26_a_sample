<%= link_to('New Article', new_article_path) %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.body %></td>
        <td>
          <% article.comments.each do |comment| %>
            <p><%= comment.body %></p>
          <% end %>
        </td>
      </tr> 
    <% end %>
  </tbody>
</table>
