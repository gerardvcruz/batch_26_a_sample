<%= form_with(scope: :user, url: signup_path, local: true) do |form| %>
  <%= form.label "Email" %>
  <%= form.text_field  :email %>
  <%= form.label "Password" %>
  <%= form.password_field :password %>
  <%= form.label "Password Confirmation" %>
  <%= form.password_field :password_confirmation %>
  <%= form.submit "Sign Up" %>
<% end %>
